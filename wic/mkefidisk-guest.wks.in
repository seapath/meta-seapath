# short-description: Create an EFI disk image
# long-description: Creates a partitioned EFI disk image that the user
# can directly dd to boot media. This wik file is for guest images.
part /boot --source bootimg-efi --sourceparams="loader=grub-efi" --ondisk sda --label efi --active --align 1024  --part-type C12A7328-F81F-11D2-BA4B-00A0C93EC93B --size 128M --use-uuid --fsoptions="defaults,noauto"
part / --source rootfs --ondisk sda --fstype=ext4 --label platform --align 1024 --use-uuid
part /var --source rootfs --ondisk sda --rootfs-dir=${IMAGE_ROOTFS}/var --fstype=ext4 --label data --align 1024 --use-uuid

bootloader --ptable gpt --timeout=0 --append="rootfstype=ext4 systemd.unified_cgroup_hierarchy=0 console=ttyS0,115200n8 quiet extra_kernel_parameters_markers"
